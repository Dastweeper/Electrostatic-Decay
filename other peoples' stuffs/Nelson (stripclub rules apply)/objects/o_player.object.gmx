if place_meeting(x, y+vsp, par_plat)
{
    while(!place_meeting(x, y+1, par_plat)) y+=1;
    vsp = 0;
    grounded = true
}
else
{
    grounded = false;
}

if place_meeting(x+hsp, y, par_plat)
{
    while(!place_meeting(x+sign(hsp), y, par_plat)) x+=sign(hsp);
    hsp = 0;
}

//comitting the speed variables
x += hsp;
y += vsp;
